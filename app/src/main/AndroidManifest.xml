<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.project3regex">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Project3Regex">
        <activity
            android:name=".TaskRecyclerAdapter"
            android:exported="false" />
        <!-- SplashActivity as the launcher activity -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- LoginActivity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true" /> <!-- RegisterActivity -->
        <activity
            android:name=".RegisterActivity"
            android:exported="true" /> <!-- SelectPriority -->
        <activity
            android:name=".SelectPriority"
            android:exported="true" /> <!-- TaskListActivity -->
        <activity
            android:name=".TaskListActivity"
            android:exported="true" /> <!-- TaskActivity -->
        <activity
            android:name=".TaskActivity"
            android:exported="true" />
    </application>

</manifest>